@model SemaNewsWeb.ViewModels.LogInVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    
}
<div class="modal-fade">
    <div class="modal-dialog ">
        <div class="modal-content mirror-background">
            <div class="modal-header">
                <h2 class="modal-title text-center">ĐĂNG NHẬP</h2>
            </div>
            @using (Html.BeginForm("Login", "Account", new { @returnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new { @class = "form-horizontal form-log-in" }))
            {
                <div class="modal-body ">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <p class="text-center">
                        @Html.ValidationMessage("LoginFailed", new { @clas=""})
                    </p>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, "TÊN", new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, "MẬT KHẨU", new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-7">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m=>m.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-7">
                            <label class="control-label">
                                @Html.CheckBoxFor(m => m.Remember, new { @class = "" })
                                GHI NHỚ ?
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">ĐĂNG NHẬP</button>
                </div>
            }

        </div>
    </div>
</div>
